set -e
set -x

export INSTALL_DIR="./build/install_ninja/bin"
echo "Using binaries from $INSTALL_DIR ..."

export DATA_DIR="$HOME/Temp/Data/mongo-mlaunch-cluster"
echo "Using data path as $DATA_DIR ..."

mkdir -p $DATA_DIR
pushd $DATA_DIR
rm -rf -- ..?* .[!.]* *
popd

mlaunch init --replicaset \
  --config 1 --sharded 1 --nodes 1 \
  --binarypath $INSTALL_DIR --dir $DATA_DIR
